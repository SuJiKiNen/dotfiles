# shellcheck disable=SC2148

if [ -f ~/.bashrc ]; then
    # shellcheck disable=SC1090
    source ~/.bashrc
fi

if [[ -z "$ZSH_VERSION" && -e ~/.fzf.bash ]]
then
    if [[ "$OSTYPE" != "msys" ]]; then
        # shellcheck disable=SC1090
        source ~/.fzf.bash
    fi
fi

# init pyenv
if command -v pyenv 1>/dev/null 2>&1;
then
    eval "$(pyenv init -)"
fi

# force utf-8
if [[ "$OSTYPE" == "msys" ]]; then
   chcp.com 65001 > /dev/null 2>&1
fi

# Local Variables:
# mode: shell-script
# End:
